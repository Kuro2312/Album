<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neogalleryds.ViewImageActivity" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->
    
    <FullscreenImage.MyViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true" />

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

   <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >

            <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="vertical">
	
	            <ImageButton
	                android:id="@+id/btnMark"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:clickable="true"
	                android:scaleType="fitCenter"
	                android:layout_gravity="center"
	                android:src = "@drawable/mark"
	                android:background="@drawable/selector_circle_button"/>
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textAlignment="center"
	                android:textColor="@android:color/white"
	                android:textSize="12dp"
	                android:text="Mark"
	                />
	        </LinearLayout>
	
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="vertical">
	
	            <ImageButton
	                android:id="@+id/btnAdd"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:clickable="true"
	                android:scaleType="fitCenter"
	                android:layout_gravity="center"
	                android:src = "@drawable/add"
	                android:background="@drawable/selector_circle_button"/>
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textAlignment="center"
	                android:textColor="@android:color/white"
	                android:textSize="12dp"
	                android:text="Add to Album"
	                />
	        </LinearLayout>
	
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="vertical">
	
	            <ImageButton
	                android:id="@+id/btnDelete"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:clickable="true"
	                android:scaleType="fitCenter"
	                android:layout_gravity="center"
	                android:src = "@drawable/delete"
	                android:background="@drawable/selector_trash_button"/>
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textAlignment="center"
	                android:textColor="@android:color/white"
	                android:textSize="12dp"
	                android:text="Delete"
	                />
	        </LinearLayout>
	
	        <View
	            android:layout_width="0dp"
	            android:layout_height="1dp"
	            android:layout_weight="1" />
        </LinearLayout>
            

    </FrameLayout>

</FrameLayout>
